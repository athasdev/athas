{
  "id": "athas.typescript",
  "name": "TypeScript",
  "displayName": "TypeScript Language Support",
  "description": "TypeScript and JavaScript language support with syntax highlighting, IntelliSense, and diagnostics",
  "version": "1.0.0",
  "publisher": "Athas",
  "license": "MIT",
  "category": "language",
  "bundled": true,
  "icon": "icon.svg",
  "capabilities": {
    "type": "language",
    "languageId": "typescript",
    "fileExtensions": ["ts", "tsx", "mts", "cts", "js", "jsx", "mjs", "cjs"],
    "aliases": ["TypeScript", "ts", "JavaScript", "js"],
    "grammar": {
      "wasmPath": "/tree-sitter/parsers/tree-sitter-tsx.wasm",
      "highlightQuery": "/tree-sitter/queries/tsx/highlights.scm",
      "scopeName": "source.tsx"
    },
    "lsp": {
      "server": {
        "default": "./lsp/node_modules/typescript-language-server/lib/cli.mjs",
        "darwin": "./lsp/node_modules/typescript-language-server/lib/cli.mjs",
        "linux": "./lsp/node_modules/typescript-language-server/lib/cli.mjs",
        "win32": "./lsp/node_modules/typescript-language-server/lib/cli.mjs"
      },
      "args": ["--stdio"],
      "fileExtensions": [".ts", ".tsx", ".js", ".jsx", ".mts", ".cts", ".mjs", ".cjs"],
      "languageIds": ["typescript", "javascript", "typescriptreact", "javascriptreact"]
    },
    "commands": [
      {
        "command": "typescript.restart",
        "title": "Restart TypeScript Server",
        "category": "TypeScript"
      },
      {
        "command": "typescript.toggle",
        "title": "Toggle TypeScript Server",
        "category": "TypeScript"
      }
    ]
  }
}
