{
  "id": "athas.markdown",
  "name": "Markdown",
  "displayName": "Markdown Language Support",
  "description": "Markdown syntax highlighting",
  "version": "1.0.0",
  "publisher": "Athas",
  "license": "MIT",
  "category": "language",
  "bundled": true,
  "capabilities": {
    "type": "language",
    "languageId": "markdown",
    "fileExtensions": ["md", "markdown", "mdx"],
    "aliases": ["Markdown", "md"],
    "grammar": {
      "wasmPath": "/tree-sitter/parsers/tree-sitter-markdown.wasm",
      "highlightQuery": "/tree-sitter/queries/markdown/highlights.scm",
      "scopeName": "text.html.markdown"
    }
  }
}
