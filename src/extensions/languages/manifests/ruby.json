{
  "id": "language.ruby",
  "name": "Ruby",
  "version": "1.0.0",
  "description": "Ruby language support with syntax highlighting (includes ERB and Rails templates)",
  "category": "language",
  "author": "Athas Team",
  "capabilities": {
    "languageProvider": {
      "id": "ruby",
      "extensions": [
        "rb",
        "rbw",
        "erb",
        "rake",
        "gemspec",
        "ru",
        "builder",
        "jbuilder",
        "rxml",
        "rjs",
        "rabl",
        "thor",
        "podspec",
        "arb"
      ],
      "aliases": ["ruby", "rb", "erb"],
      "wasmPath": "/extensions/ruby/parser.wasm",
      "highlightQuery": "/extensions/ruby/highlights.scm"
    }
  }
}
