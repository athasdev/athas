{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Athas",
  "version": "0.2.7",
  "identifier": "com.code.athas",
  "build": {
    "beforeDevCommand": "bun vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun typecheck && bun vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "",
        "width": 1200,
        "height": 800,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": false,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 400,
        "minHeight": 400,
        "shadow": true,
        "trafficLightPosition": {
          "x": 18.5,
          "y": 20.5
        }
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; connect-src 'self' https://athas.dev https://*.athas.dev https://api.anthropic.com https://api.openai.com https://generativelanguage.googleapis.com https://*.githubusercontent.com; img-src 'self' asset: http://asset.localhost data: blob:; font-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'",
      "capabilities": [
        "main-capability"
      ],
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../src/extensions/bundled"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": "Developer ID Application: Mehmet Ozgul (N43BXFX4H4)",
      "providerShortName": null,
      "entitlements": null
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "athas"
        ]
      }
    },
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/athasdev/athas/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJBNDk0QjI4NkVDNDQwRUUKUldUdVFNUnVLRXRKdXV2elJZL3RsOWkvRDJueUwvQjh1UzdMbFBHZmZjV01Ec3lXZ1hFY3V6RkYK"
    }
  }
}
