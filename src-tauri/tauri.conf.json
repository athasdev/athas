{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Athas",
  "version": "0.1.0",
  "identifier": "com.athas-code.app",
  "build": {
    "beforeDevCommand": "vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "tsc && vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Athas",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "transparent": true,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 400,
        "minHeight": 400,
        "shadow": true
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
      "capabilities": ["main-capability"],
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
