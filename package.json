{
  "name": "athas-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check",
    "lint": "biome check --write",
    "format": "biome check --write",
    "typecheck": "bun --filter '*' typecheck",
    "knip": "knip",
    "prepare": "simple-git-hooks",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@commitlint/cli": "^19.8.1",
    "concurrently": "^9.2.0",
    "knip": "^5.62.0",
    "simple-git-hooks": "^2.13.0"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx concurrently --names \"rust,ts\" --prefix-colors \"yellow,cyan\" 'cargo fmt --check' 'bun check && bun typecheck'",
    "commit-msg": "bun commitlint --edit $1"
  }
}
